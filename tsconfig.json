{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",

    "allowImportingTsExtensions": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
